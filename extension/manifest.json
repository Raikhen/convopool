{
  "manifest_version": 3,
  "name": "ConvoPool",
  "version": "1.0.0",
  "description": "Share your AI conversations for AI safety research",
  "homepage_url": "https://convopool.vercel.app",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://gemini.google.com/*",
    "https://convopool.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"]
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["content-claude.js"]
    },
    {
      "matches": [
        "https://grok.com/*"
      ],
      "js": ["content-grok.js"]
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["content-gemini.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
